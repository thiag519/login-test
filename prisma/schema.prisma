generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id         Int         @id      @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  role       Role        @default(USER)
  createdAt  DateTime    @default(now())
  posts      Post[]
}

model Post {
  id          Int         @id      @default(autoincrement())
  title       String
  content     String?
  reactDown   Int?
  reactUp     Int?
  createdAt   DateTime    @default(now())
  userId      Int
  author      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

